<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_dinner_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs427001_22.lab2.DisplayDinnerMenu">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="174dp"
            android:layout_height="184dp"
            app:srcCompat="@drawable/toast"
            android:id="@+id/imageView"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:text="@string/Toast"
            android:layout_width="88dp"
            android:layout_height="34dp"
            android:id="@+id/textView3"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:text="@string/Juice"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="312dp"
            android:layout_marginEnd="312dp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp" />

        <ImageView
            android:layout_width="176dp"
            android:layout_height="181dp"
            app:srcCompat="@drawable/burrito"
            android:id="@+id/imageView4"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:text="@string/burrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="50dp" />

        <ImageView
            android:layout_width="182dp"
            android:layout_height="188dp"
            app:srcCompat="@drawable/juice"
            android:id="@+id/imageView3"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:text="@string/Pancake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="75dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <ImageView
            android:layout_width="189dp"
            android:layout_height="182dp"
            app:srcCompat="@drawable/panckake"
            android:id="@+id/imageView2"
            android:layout_row="3"
            android:layout_column="1" />

    </GridLayout>

</RelativeLayout>
